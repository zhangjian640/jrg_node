extends ./layout

block content
    .container
        .row
            h1 用户列表
            table.table.table-hover
                thead
                    tr
                        th ID
                        th 用户名
                        th 操作
                tbody
                    each item in users
                        tr
                            td #{item.id}
                            td #{item.username}
                            td
                                a(href=`/user/user/${item.id}`) 查看