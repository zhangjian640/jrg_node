extends ./layout

block content
    .container
        form.form-signin(method="POST", action="/user/register")
            h2 #{title}
            .form-group
                label(for="signupName") 用户名
                input#signupName.form-control(name="username", type="text")
            .form-group
                label(for="signupPassword") 密码
                input#signupPassword.form-control(name="password", type="text")
            button.btn.btn-lg.btn-primary.btn-block(type="submit") 提交